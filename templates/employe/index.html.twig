{% extends 'base.html.twig' %}

{% block title %}Hello EmployeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>


    <h2>La liste des employes</h2>
    {% for employe in employes %}

    <a href="{{ path('showEmploye', {'id': employe.id}) }}">{{ employe }}</a>
    <a href="{{ path('editEmploye',{'id': employe.id}) }}">Editer </a>
    <a href="{{ path('deleteEmploye', {'id': employe.id}) }}">supprimer l'employé</a>
    <br>
    {% endfor %}    
{% endblock %}
